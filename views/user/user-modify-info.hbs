<div class="page-header">
    <h1>修改个人资料</h1>
</div>


<form class="form-horizontal" role="form" method="post">

    <fieldset disabled>
        <div class="form-group">
            <label for="disabledTextInput" class="col-sm-2 control-label">用户名</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="disabledTextInput" name="name" value="{{ name }}"
                    placeholder="请输入用户名">
            </div>
        </div>
    </fieldset>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">请输入原密码验证身份</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="password" name="password" value="{{password}}" placeholder="请输入原密码验证身份">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">请输入新密码</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="password-repeat" name="password-repeat" value="{{rp_pwd}}"
                placeholder="新密码">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">修改密码</button>
        </div>
    </div>
</form>
{{#if error}}
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
        &times;
    </button>
    {{error}}
</div>
{{/if}}

{{#if success}}
<div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
        &times;
    </button>
    {{success}}
</div>
{{/if}}